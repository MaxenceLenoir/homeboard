<div class="container">

<%= link_to  services_path, class: 'link-without-style' do  %>
  <h1 class="text-center">Services</h1>
<% end %>


<div class="d-flex justify-content-center">
  <%= link_to "offer", services_path(category: params[:category] == "offer" ? "" : "offer"), 
                       class: "m-5 #{params[:category] == 'offer' ? 'button-red-offer ' : 'button-red-t'}" %>

  <%= link_to "demand", services_path(category: params[:category] == "demand" ? "" : "demand"), 
                       class: "m-5 #{params[:category] == 'demand' ? 'button-grey-demand' : 'button-grey-t'}" %>
</div>


<div class="grid-services">
  <% @services.each do |service| %>
    <div class="grid-col-services">
      <div class="card-service">
      <% if service.category == "offer" %>
        <div class="card-service-offer">
        </div>
      <% else %>
        <div class="card-service-demand">
        </div>
      <% end %>
        <div class="card-service-avatar">
        </div>
        <div class="card-service-text">
          <div class="card-service-title">
            <%= link_to service.title, service_path(service), class: 'without-decoration' %>
          </div>
          <div class="card-service-body">
            by <%= service.user.pseudo %> - <%= service.created_at.strftime("%F") %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

</div>
