<%= simple_form_for(service, remote: true) do |f| %>
<div class="container">
  <%= f.input :category, as: :radio_buttons, wrapper: :vertical_collection_inline, collection: ["offer", "demand"]  %>
  <%= f.input :title %>
  <%= f.input :description %>
  <i class="fas fa-calendar-week"></i>
  <%= f.input :start_at, as: :string, required: false, input_html: {class: "datepicker", min: Date.today} %>
  <i class="fas fa-calendar-week"></i>
  <%= f.input :end_at, as: :string, required: false, input_html: {class: "datepicker"}, min: Date.today  %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.button :submit %>
</div>
<% end %>
