<div></div>






<div class="row">
  <div class="col-xs-12 col-sm-6 offset-sm-3">
    <div class="form-login mt-2">
      <%= simple_form_for(service, remote: true) do |f| %>
      <div class="container">
        <%= f.input :category, as: :radio_buttons, wrapper: :vertical_collection_inline, collection: ["offer", "demand"]  %>
        <%= f.input :title, placeholder: 'title', label:false %>
        <%= f.input :description, placeholder: 'description', label:false %>
        <i class="fas fa-calendar-week"></i>
        <%= f.input :start_at, as: :string, required: false, input_html: {id: "range_start" } %>
        <i class="fas fa-calendar-week"></i>
        <%= f.input :end_at, as: :string, required: false, input_html: {id: "range_end" }  %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, class: "button-green" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

