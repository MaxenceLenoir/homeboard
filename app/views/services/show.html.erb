<h1> <%= @service.title %></h1>

<%= link_to "Update", service_path(@service), method: :patch %>
<%= link_to "Delete", service_path(@service), method: :delete, data: {confirm: "Are you sure ?"} %>
<% unless @comments.nil? %>
  <% @comments.each do |comment| %>
    <%= comment.content %>
    by <%= comment.user.pseudo %>
  <% end %>
<% end %>

<%= render "comments/form", comment: [ @service, @comment ] %>